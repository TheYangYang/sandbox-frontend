# --- Development Dockerfile ---
FROM node:22-alpine
WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* pnpm-lock.yaml* yarn.lock* ./
RUN npm install

# Copy the rest of the code
COPY . .

# Expose dev port
EXPOSE 3000

# Run Next.js in development mode (hot reload)
CMD ["npm", "run", "dev"]
